@using System.Collections.Generic;


@model KeyValuePair<HealthyFoodOnlineShop.Models.Catalog.BasketAssetIndexModel, double>


<div id="assetsTable">
    <table class="table table-condensed" id="catalogIndexTable">
        <thread>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Count</th>
                <th>Sum</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var asset in Model.Key.Assets)
            {
                <tr class="AssetRow">
                    <td class="">
                        <a asp-controller="Catalog" asp-action="Detail">
                            <img src="@asset.ImageUrl" class="ImageCell" />
                        </a>
                    </td>
                    <td class="">
                        @asset.Name
                    </td>
                    <td>
                        x<span>@asset.Amount</span>
                    </td>
                    <td class="">
                        <span>@asset.Price</span> $
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style=" display:flex;justify-content:center; text-align:center;font-size:40px; margin-top:100px; ">
        <p>Total sum:</p>
        <p>@Model.Value $</p>
    </div>
    <button style="display:block; width:300px;height:75px; font-size:28px; margin-left:auto;margin-right:auto" type="button" class="btn btn-success">Make an Order</button>
</div>